BRIGHT_GREEN="#B2E6AB"     # brighter leaf green
BRIGHT_YELLOW="#F5C85E"    # brighter gold
BRIGHT_BLUE="#A0E2FF"      # brighter ice cyan
BRIGHT_MAGENTA="#F1C3C1"   # brighter rose pink
BRIGHT_CYAN="#A0E2FF"      # brighter ice cyan
BRIGHT_WHITE="#FFFFFF"     # pure white
